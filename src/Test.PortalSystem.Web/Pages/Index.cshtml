@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Test.PortalSystem.Localization
@using Volo.Abp.Users
@model Test.PortalSystem.Web.Pages.IndexModel
@inject IHtmlLocalizer<PortalSystemResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        
        <h1>Welcome to the Portal System </h1>

        <p class="lead px-lg-5 mx-lg-5"></p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login" ><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>
 
</div>
